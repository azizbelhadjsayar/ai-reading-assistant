{
  "manifest_version": 3,
  "name": "AI Reading Assistant",
  "version": "1.0.0",
  "description": "Smart AI-powered reading assistant. Summarize articles, extract key points, and listen with text-to-speech.",
  "author": "NEVERHACK Hackathon Team",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "AI Reading Assistant"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["libs/readability.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tts"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "options_page": "options.html"
}
